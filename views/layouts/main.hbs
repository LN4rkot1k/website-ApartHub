    {{#if apartmentEdit}}
    <link rel="stylesheet" href="/css/apartmentEdit.css">
    {{/if}}

    {{#if showEditApartmentPage}}
    <link rel="stylesheet" href="/css/editApartment.css">
    {{/if}}

    {{#if getEditProfilePage}}
    <link rel="stylesheet" href="/css/editProfilePage.css">
    {{/if}}
</head>
<body>
    <div class="page-wrapper">
        {{> header}}
        <main class="page-content">
            {{{body}}}
        </main>

        {{> footer}}
    </div>

    <div id="cookie-banner" class="cookie-banner">
        Мы используем cookie для улучшения работы сайта. 
        Продолжая использовать сайт, вы соглашаетесь с нашей 
        <a href="/privacy-policy" target="_blank">политикой конфиденциальности</a>.
        <button id="accept-cookies">Понятно</button>
    </div>

    <script>
        $(document).ready(function() {
            if (!localStorage.getItem('cookiesAccepted')) {
                $('#cookie-banner').fadeIn();
            }

            $('#accept-cookies').click(function() {
                localStorage.setItem('cookiesAccepted', 'true');
                $('#cookie-banner').fadeOut();
            });
        });

    </script>

    <style>
    .cookie-banner {
        display: none;
        position: fixed;
        bottom: 0;
        width: 100%;
        background: #f2f2f2;
        padding: 10px 15px;
        font-size: 14px;
        text-align: center;
        box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
        z-index: 9999;
    }
    .cookie-banner a {
        color: #004085;
        text-decoration: underline;
    }
    .cookie-banner button {
        margin-left: 10px;
        padding: 5px 10px;
        font-size: 14px;
        background: #3b0083;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    .cookie-banner button:hover {
        background: #2b004c;
    }
    </style>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/js.js"></script>
</body>
</html>
