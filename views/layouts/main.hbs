    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="/css/style.css">

    {{#if apartmentsPage}}
    <link rel="stylesheet" href="/css/apartments.css">
    {{/if}}

    {{#if apartmentDetailPage}}
    <link rel="stylesheet" href="/css/apartmentDetails.css">
    {{/if}}

    {{#if mortgageCalculatorPage}}
    <link rel="stylesheet" href="/css/mortgageCalculator.css">
    {{/if}}

    {{#if loginPage}}
    <link rel="stylesheet" href="/css/loginPage.css">
    {{/if}}

    {{#if userProfilePage}}
    <link rel="stylesheet" href="/css/userProfilePage.css">
    {{/if}}

    {{#if registerPage}}
